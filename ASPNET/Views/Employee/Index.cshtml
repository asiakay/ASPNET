@{
}

@model IEnumerable<Employee>


<h2>Employees</h2>
<div style="display:block"><a href="/Employee/InsertEmployee/">Add a new Employee</a></div>

<table class="table">
    <tr>
        <th>EmployeeID</th>
        <th>First Name</th>
        <th>MiddleInitial </th>
        <th>LastName </th>
        <th>Email Address</th>
        <th>Phone Number</th>
        <th>Title </th>
    </tr>

    @foreach (var employee in Model)
     {

<tr>
    <td><a href=/Employee/ViewEmployee/@employee.EmployeeID>@employee.EmployeeID</a></td>


    <td>@employee.EmployeeID</td>
    <td>@employee.FirstName</td>
    <td>@employee.MiddleInitial</td>
    <td>@employee.LastName</td>
    <td>@employee.EmailAddress</td>
    <td>@employee.PhoneNumber</td>
    <td>@employee.Title</td>

</tr>


     }

    </table>






